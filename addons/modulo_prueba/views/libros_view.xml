<?xml version="1.0"?>
<odoo>
    <!-- Vista form para libros -->
    <record id="libros_form_view" model="ir.ui.view">
        <field name="name">libro.form.view</field>
        <field name="model">libros</field>
        <field name="arch" type="xml">
            <form string="Libro">
                <sheet>
                    <group> <!-- Bootstrap 12 COLUMNAS-->
                        <group> <!-- 6 COLUMNAS-->
                            <field name="image" widget="image" class="oe_avatar"/>
                            <field name="name"/>
                            <field name="editorial"/>
                            <field name="isbn"/>
                            <field name="autor_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista tree para libros -->
    <record id="libros_tree_view" model="ir.ui.view">
        <field name="name">libro.tree.view</field>
        <field name="model">libros</field>
        <field name="arch" type="xml">
            <tree string="Libros">
                <field name="name"/>
                <field name="editorial"/>
                <field name="isbn"/>
                <field name="autor_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista kanban para libros -->
    <record id="libros_kanban_view" model="ir.ui.view">
        <field name="name">libro.kanban.view</field>
        <field name="model">libros</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="editorial"/>
                <field name="isbn"/>
                <field name="autor_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('libros','image',record.id.raw_value)" alt="Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title oe_partner_heading">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>

    </record>

</odoo>